{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug MyCppApp",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/MyCppApp",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  